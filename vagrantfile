Vagrant.configure(2) do |config|

	config.vm.define "bdd-cmc6-11" do |bddbox|
		bddbox.vm.box = "CMC6Base"
		bddbox.vm.box_url = "file:///D:/DEV/VirtualBox/Vagrant/WINXPSP3_CMC6/winxpsp3_cmc6.box"

		bddbox.vm.guest = :windows
		bddbox.vm.communicator = "winrm"
		bddbox.winrm.username = "mayhack"    
		bddbox.winrm.password = "mayhack"

		bddbox.vm.hostname = "bdd-box-11"

		bddbox.vm.network "public_network", :adapter=>2 , ip: "10.10.86.11", 
			:netmask => "255.255.255.0",
			:mac => "080027000011"

		bddbox.vm.provider "virtualbox" do |vbox|
			vbox.gui = true
			vbox.memory = "1024"
		end

		config.vm.provision "softupd", type: "shell", run: "manual" do |s|
			s.path = "scripts\\softupd.ps1"
		end
	end
	
	config.vm.define "bdd-cmc6-12" do |bddbox|
		bddbox.vm.box = "CMC6Base"
		bddbox.vm.box_url = "file:///D:/DEV/VirtualBox/Vagrant/WINXPSP3_CMC6/winxpsp3_cmc6.box"

		bddbox.vm.guest = :windows
		bddbox.vm.communicator = "winrm"
		bddbox.winrm.username = "mayhack"    
		bddbox.winrm.password = "mayhack"

		bddbox.vm.hostname = "bdd-box-12"

		bddbox.vm.network "public_network", :adapter=>2 , ip: "10.10.86.12", 
			:netmask => "255.255.255.0",
			:mac => "080027000012"

		bddbox.vm.provider "virtualbox" do |vbox|
			vbox.gui = true
			vbox.memory = "1024"
		end

		config.vm.provision "softupd", type: "shell", run: "manual" do |s|
			s.path = "scripts\\softupd.ps1"
		end
	end
end
